<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_262626"
    android:orientation="vertical" >

    <include layout="@layout/register_include_title_bar_01" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="550dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15.0dip" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30.0dip" >

                <ImageView
                    android:id="@id/regist_head_img"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50.0dip"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/register_icon_head_male" />

                <ImageView
                    android:id="@id/regist_head_cover_img"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50.0dip"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/register_icon_head_corver" />

                <ImageView
                    android:id="@id/regist_camera_img"
                    android:layout_width="27.0dip"
                    android:layout_height="27.0dip"
                    android:layout_marginLeft="-35.0dip"
                    android:layout_marginTop="125.0dip"
                    android:layout_toRightOf="@id/regist_head_cover_img"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/register_icon_camera" />

                <RadioGroup
                    android:id="@id/regist_sex_radio_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180.0dip"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@id/regist_male_rb"
                        android:layout_width="70.0dip"
                        android:layout_height="35.0dip"
                        android:background="@drawable/register_male_btn_selector"
                        android:button="@null"
                        android:checked="true" />

                    <RadioButton
                        android:id="@id/regist_female_rb"
                        android:layout_width="70.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginLeft="30.0dip"
                        android:background="@drawable/register_female_btn_selector"
                        android:button="@null" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@id/regist_name_et"
                    android:layout_width="290.0dip"
                    android:layout_height="50.0dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/register_password_bg"
                    android:hint="请输入学号"
                    android:paddingLeft="60.0dip"
                    android:singleLine="true"
                    android:text="" />

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignLeft="@id/regist_name_et"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:contentDescription="@null"
                    android:src="@drawable/register_icon_username" />
            </RelativeLayout>

            <View
                android:layout_width="290.0dip"
                android:layout_height="0.5dip"
                android:background="@color/color_E8E8E8" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@id/regist_password_et"
                    android:layout_width="290.0dip"
                    android:layout_height="50.0dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/register_password_bg"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="60.0dip"
                    android:singleLine="true"
                    android:text="" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/regist_password_et"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23.0dip"
                    android:contentDescription="@null"
                    android:src="@drawable/register_icon_password" />
            </RelativeLayout>

            <View
                android:layout_width="290.0dip"
                android:layout_height="0.5dip"
                android:background="@color/color_E8E8E8" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@id/regist_password_et_confirm"
                    android:layout_width="290.0dip"
                    android:layout_height="50.0dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/register_password_bg"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="60.0dip"
                    android:singleLine="true"
                    android:text="" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/regist_password_et_confirm"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23.0dip"
                    android:contentDescription="@null"
                    android:src="@drawable/register_icon_password" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip" >

                <Button
                    android:id="@id/regist_btn"
                    android:layout_width="290.0dip"
                    android:layout_height="50.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/login_btn_selector"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:textSize="26.0sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>