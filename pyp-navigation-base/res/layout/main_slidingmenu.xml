        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/main_slidingmenu_bottom_exit"
        android:text="@string/main_slidingmenu_bottom_exit_text"
        android:textColor="@color/main_slidingmenu_bottom_exit_text_color"
        android:background="@drawable/main_slidingmenu_bottom_exit_bg"
        android:layout_width="138.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center"
        android:minHeight="40.0dip"
        android:textSize="18.0sp" />

</LinearLayout>