<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_slidingmenu"
    android:background="@color/main_slidingmenu_background"
    android:layout_width="220.0dip"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <pyp.navigation.main.menu.SlidmenuAvatarFrameView
        android:id="@+id/main_slidingmenu_head_avatarframe"
        android:layout_width="fill_parent"
