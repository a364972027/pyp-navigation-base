<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/main_slidingmenu_head_avatarframe_frame"
        android:layout_width="@dimen/main_slidingmenu_head_avatarframe_width"
        android:layout_height="@dimen/main_slidingmenu_head_avatarframe_height"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/main_slidingmenu_head_avatarframe_avatar"
        android:layout_width="@dimen/main_slidingmenu_head_avatarframe_width"
        android:layout_height="@dimen/main_slidingmenu_head_avatarframe_height"
        android:src="@drawable/main_slidingmenu_head_avatar_default"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/main_slidingmenu_head_avatarframe_mask"
        android:layout_width="@dimen/main_slidingmenu_head_avatarframe_width"
        android:layout_height="@dimen/main_slidingmenu_head_avatarframe_height"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />

</RelativeLayout>